<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:clickable="true"
    android:elevation="2.60dp"
    android:focusable="true"
    app:cardCornerRadius="6.50dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chapter_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChapterNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chapter 1"
                        android:textColor="@color/orange"
                        android:textSize="15.60sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChapterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chapter Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFavouriteFilled"
                        android:layout_width="39.00dp"
                        android:layout_height="39.00dp"
                        android:hapticFeedbackEnabled="true"
                        android:src="@drawable/baseline_favorite_24"
                        android:visibility="gone"
                        app:tint="@color/orange" />

                    <ImageView
                        android:id="@+id/ivFavourite"
                        android:layout_width="39.00dp"
                        android:layout_height="39.00dp"
                        android:hapticFeedbackEnabled="true"
                        android:src="@drawable/baseline_favorite_border_24"
                        android:visibility="visible"
                        app:tint="@color/orange" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvChapterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="3.90dp"
                android:text="Lorem ipsnt occa deserunt mollit anim id est laborum."
                android:textColor="@color/black"
                android:textSize="15.60sp"
                app:layout_goneMarginTop="6.50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36.40dp"
                    android:layout_height="36.40dp"
                    android:src="@drawable/menu"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvVerseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="13.00dp"
                    android:text="41"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVerse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3.90dp"
                    android:text="Verses"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backgroundImage3"
            android:layout_width="130.00dp"
            android:layout_height="130.00dp"
            android:alpha="0.3"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backgroundImage2"
            android:layout_width="130.00dp"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/down_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>