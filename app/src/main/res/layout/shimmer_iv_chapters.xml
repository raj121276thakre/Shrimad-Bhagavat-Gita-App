<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="2.60dp"
    android:focusable="true"
    app:cardCornerRadius="6.50dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            android:background="@drawable/chapter_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChapterNumber"
                        android:layout_width="130.00dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shimmer"
                        android:textColor="@color/orange"
                        android:textSize="15.60sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChapterName"
                        android:layout_width="169.00dp"
                        android:layout_margin="1.30dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shimmer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold" />

                </LinearLayout>




            </LinearLayout>

            <TextView
                android:id="@+id/tvChapterDescription"
                android:layout_width="match_parent"
                android:layout_height="91.00dp"
                android:layout_marginHorizontal="2dp"
                android:padding="3.90dp"
                android:layout_margin="1.30dp"
                android:background="@drawable/bg_shimmer"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/chapterDetails"
                android:textSize="15.60sp"
                app:layout_goneMarginTop="6.50dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30.00dp"
                    android:layout_height="30.00dp"
                    android:background="@drawable/bg_shimmer"

                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginStart="3.90dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVerse"
                    android:layout_width="130.00dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shimmer"
                    android:layout_margin="3.90dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginStart="3.90dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backgroundImage3"
            android:layout_width="130.00dp"
            android:layout_height="130.00dp"
            android:alpha="0.3"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backgroundImage2"
            android:layout_width="130.00dp"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/down_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>